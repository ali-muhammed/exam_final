<div class="d-flex justify-content-center align-items-center">
	<div class="row">
		<div class="col-md-6">
			<h1><%= @place.title %></h1>
			<p><%= @place.description %></p>

		</div>
		<div class="col-md-6">
			<% if @place.picture.attached? %>
	          <%= image_tag @place.picture, size: 250,  class: "img-thumbnail" %>
	        <% end %>
		</div>
	<%= link_to 'Back', places_path %>
	</div>
</div>


  